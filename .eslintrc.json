{
  "env": {
    "node": true,
    "es2022": true,
    "browser": false
  },
  "globals": {
    "document": "readonly",
    "window": "readonly",
    "localStorage": "readonly",
    "MutationObserver": "readonly"
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_", "varsIgnorePattern": "^_" }],
    "no-undef": "error",
    "no-console": "off",
    "no-redeclare": "error",
    "no-unreachable": "error",
    "no-constant-condition": "error",
    "no-duplicate-case": "error",
    "no-empty": "warn",
    "no-extra-semi": "error",
    "no-func-assign": "error",
    "no-inner-declarations": "warn",
    "no-irregular-whitespace": "error",
    "no-obj-calls": "error",
    "no-sparse-arrays": "error",
    "no-unexpected-multiline": "error",
    "no-useless-escape": "warn",
    "no-prototype-builtins": "warn",
    "no-const-assign": "error",
    "use-isnan": "error",
    "valid-typeof": "error",
    "no-restricted-syntax": [
      "error",
      {
        "selector": "CallExpression[callee.object.name='Date'][callee.property.name='now']",
        "message": "CONSTITUTIONAL VIOLATION: Use getTimeProvider().now() instead of Date.now() (CORE #3: Determinism)"
      },
      {
        "selector": "NewExpression[callee.name='Date']",
        "message": "CONSTITUTIONAL VIOLATION: Use getTimeProvider().iso() or getTimeProvider().date() instead of new Date() (CORE #3: Determinism)"
      },
      {
        "selector": "CallExpression[callee.object.name='Math'][callee.property.name='random']",
        "message": "CONSTITUTIONAL VIOLATION: Math.random() forbidden in production runtime (CORE #3: Determinism)"
      },
      {
        "selector": "CallExpression[callee.object.name='performance'][callee.property.name='now']",
        "message": "CONSTITUTIONAL VIOLATION: Use getTimeProvider().now() instead of performance.now() (CORE #3: Determinism)"
      }
    ]
  },  "overrides": [
    {
      "files": ["src/cli/util/support/time-provider.js", "test/support/test-id-provider.js"],
      "rules": {
        "no-restricted-syntax": "off"
      }
    },
    {
      "files": ["test/**/*.js"],
      "globals": {
        "test": "readonly",
        "describe": "readonly",
        "it": "readonly",
        "expect": "readonly",
        "beforeEach": "readonly",
        "afterEach": "readonly",
        "beforeAll": "readonly",
        "afterAll": "readonly"
      },
      "rules": {
        "no-undef": "error",
        "no-prototype-builtins": "error"
      }
    }
  ],  "ignorePatterns": [
    "node_modules/",
    ".verax/",
    "dist/",
    "build/",
    "coverage/",
    "artifacts/",
    "test/fixtures/",
    "test/tmp/",
    "tmp/",
    "demos/",
    "test-projects/",
    "verax-website/",
    "*.tgz",
    "*.log"
  ]
}
