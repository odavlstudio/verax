{
  "env": {
    "node": true,
    "es2022": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "commonjs"
  },
  "ignorePatterns": ["node_modules/", "artifacts/", ".odavl-guardian/", "logs/", "reports/", "extension/", "website/", "artifacts/**", "**/*.log", "test/phase5-evidence.test.js", ".tmp*/**", ".odavlguardian/**"],
  "rules": {
    "no-unused-vars": ["error", { "args": "none", "ignoreRestSiblings": true }],
    "no-undef": "error",
    "eqeqeq": ["error", "always"],
    "consistent-return": "error",
    "no-var": "error",
    "prefer-const": ["error", { "destructuring": "all" }],
    "curly": ["error", "multi-line"]
  },
  "overrides": [
    {
      "files": ["test/**/*", "tests/**/*"],
      "env": { "jest": true },
      "rules": {
        "no-undef": "off",
        "no-unused-vars": "off",
        "prefer-const": "off",
        "curly": "off",
        "consistent-return": "off"
      }
    },
    {
      "files": ["bin/guardian.js"],
      "rules": {
        "no-unused-vars": ["error", { "args": "none", "ignoreRestSiblings": true, "varsIgnorePattern": "^(get|is|check|print|set|log|record|validate|run|list|cleanup|generate|export|import|add|remove|compute|resolve|require|map)" }]
      }
    },
    {
      "files": ["docs/**/*", "examples/**/*", "scripts/**/*"],
      "rules": {
        "no-unused-vars": ["warn", { "args": "none", "ignoreRestSiblings": true }],
        "consistent-return": "warn"
      }
    }
  ]
}
