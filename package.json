{
  "name": "@odavl/guardian",
  "version": "1.0.0",
  "description": "Detects silent user failures on websites by interacting with elements and reporting interactions that produce no observable effect.",
  "license": "MIT",
  "author": "ODAVL",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/odavlstudio/odavlguardian.git"
  },
  "keywords": [
    "silent-failures",
    "website-testing",
    "e2e-testing",
    "browser-automation",
    "playwright",
    "interaction-testing"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "bin": {
    "guardian": "./bin/guardian.js",
    "odavl-guardian": "./bin/guardian.js"
  },
  "files": [
    "bin/",
    "src/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "node test/severity.test.js && node test/result-aggregation.test.js && node test/exit-codes.test.js && npx mocha test/integration.test.js --timeout 30000",
    "build": "echo 'No build required - JavaScript package'",
    "lint": "eslint bin/ src/",
    "lint:fix": "eslint bin/ src/ --fix",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "playwright": "^1.48.2"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "eslint": "^9.39.2",
    "glob": "^13.0.0",
    "globals": "^17.0.0",
    "mocha": "^11.7.5",
    "typescript": "^5.9.3"
  }
}
