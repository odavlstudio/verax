{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "bin/**/*.js",
    "src/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "artifacts",
    "artifacts/**",
    ".odavl-guardian",
    "logs",
    "reports",
    "extension",
    "website",
    "docs",
    "examples",
    "samples",
    "scripts",
    "flows",
    "policies",
    "data",
    "test",
    "internal"
  ]
}
