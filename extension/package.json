{
  "name": "odavl-guardian",
  "displayName": "ODAVL Guardian",
  "description": "Launch decision engine that tests real user flows and returns a deploy verdict.",
  "version": "1.1.0",
  "publisher": "odavl",
  "license": "MIT",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/odavlstudio/odavlguardian.git"
  },
  "bugs": {
    "url": "https://github.com/odavlstudio/odavlguardian/issues"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Testing",
    "Other"
  ],
  "keywords": [
    "testing",
    "browser",
    "automation",
    "quality",
    "guardian"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "ODAVL Guardian",
      "properties": {
        "odavlGuardian.binaryPath": {
          "type": "string",
          "default": "",
          "description": "Path to guardian CLI binary (optional). Leave empty to auto-detect."
        }
      }
    },
    "commands": [
      {
        "command": "odavlGuardian.runRealityCheck",
        "title": "Guardian: Run Reality Check"
      },
      {
        "command": "odavlGuardian.openLastReport",
        "title": "Guardian: Open Last Report"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  }
}

