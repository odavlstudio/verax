{
  "name": "odavl-guardian",
  "displayName": "ODAVL Guardian",
  "description": "The final decision authority before launch. Observes real user reality and decides deployment safety.",
  "version": "1.0.1",
  "publisher": "odavl",
  "license": "MIT",
  "homepage": "https://github.com/odavlstudio/odavlguardian",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/odavlstudio/odavlguardian.git"
  },
  "bugs": {
    "url": "https://github.com/odavlstudio/odavlguardian/issues"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "decision-gate",
    "deployment-gate",
    "launch-authority",
    "production-safety",
    "guardian"
  ],
  "activationEvents": [
    "onCommand:odavlGuardian.runRealityCheck",
    "onView:guardianVerdicts"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "ODAVL Guardian",
      "properties": {
        "odavlGuardian.binaryPath": {
          "type": "string",
          "default": "",
          "description": "Path to guardian CLI binary (optional). Leave empty to auto-detect."
        }
      }
    },
    "commands": [
      {
        "command": "odavlGuardian.runRealityCheck",
        "title": "Guardian: Check Deployment Safety"
      },
      {
        "command": "odavlGuardian.openLastReport",
        "title": "Guardian: Open Last Report"
      },
      {
        "command": "odavlGuardian.openVerdictFile",
        "title": "Guardian: Open Verdict File"
      },
      {
        "command": "odavlGuardian.showDecisionReasoning",
        "title": "Guardian: Show Decision Reasoning"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "guardianVerdicts",
          "title": "Guardian Verdicts",
          "icon": "media/icon.png"
        }
      ]
    },
    "views": {
      "guardianVerdicts": [
        {
          "id": "guardianVerdicts",
          "name": "Recent Verdicts",
          "type": "tree"
        },
        {
          "id": "guardianDecision",
          "name": "Why This Decision",
          "type": "webview"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "extension:verify": "node scripts/verify-extension.js",
    "extension:package": "npm run compile && npm run extension:verify"
  },
  "devDependencies": {
    "@types/node": "20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  }
}

