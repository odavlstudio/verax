{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Guardian Trust",
  "type": "object",
  "required": ["trustLevel", "trustWhy", "trustLimits", "recommendedAction"],
  "properties": {
    "trustLevel": { "type": "string", "enum": ["HIGH", "MEDIUM", "LOW"] },
    "trustWhy": { "type": "array", "items": { "type": "string" } },
    "trustLimits": { "type": "array", "items": { "type": "string" } },
    "recommendedAction": { "type": "string", "enum": ["Proceed", "Proceed with Caution", "Block"] }
  },
  "additionalProperties": false
}
